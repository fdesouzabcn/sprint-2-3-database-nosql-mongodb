{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "_id",
      "brand_name",
      "frame_type",
      "frame_color",
      "graduations",
      "lens_colors",
      "price",
      "supplier_id"
    ],
    "properties": {
      "_id": {
        "bsonType": "objectId",
        "description": "Unique identifier for the glasses product"
      },
      "brand_name": {
        "bsonType": "string",
        "minLength": 1,
        "maxLength": 50,
        "description": "Brand name"
      },
      "frame_type": {
        "bsonType": "string",
        "enum": ["floating", "plastic", "metallic"],
        "description": "Frame type"
      },
      "frame_color": {
        "bsonType": "string",
        "maxLength": 30,
        "description": "Frame color"
      },
      "graduations": {
        "bsonType": "object",
        "required": ["left_lens", "right_lens"],
        "properties": {
          "left_lens": {
            "bsonType": "double",
            "minimum": -20.00,
            "maximum": 20.00,
            "description": "Left lens graduation"
          },
          "right_lens": {
            "bsonType": "double",
            "minimum": -20.00,
            "maximum": 20.00,
            "description": "Right lens graduation"
          }
        },
        "description": "Lens graduations"
      },
      "lens_colors": {
        "bsonType": "object",
        "required": ["left", "right"],
        "properties": {
          "left": {
            "bsonType": "string",
            "maxLength": 30,
            "description": "Left lens color"
          },
          "right": {
            "bsonType": "string",
            "maxLength": 30,
            "description": "Right lens color"
          }
        },
        "description": "Lens colors"
      },
      "price": {
        "bsonType": "double",
        "minimum": 0.01,
        "description": "Current selling price"
      },
      "supplier_id": {
        "bsonType": "objectId",
        "description": "Reference to suppliers collection (for magnifying glass detail)"
      },
      "created_at": {
        "bsonType": "date",
        "description": "Document creation timestamp"
      },
      "updated_at": {
        "bsonType": "date",
        "description": "Document last update timestamp"
      }
    }
  }
}